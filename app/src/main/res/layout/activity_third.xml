<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ThirdActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constrain"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адрес:"
            android:textColor="@color/colorGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Боконбаева - Пр.Мира"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/tv_address1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Дата:"
            android:textColor="@color/colorGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_address1" />

        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="17:55, Черверг 27.02.2020"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/tv_date1"
            app:layout_constraintTop_toBottomOf="@id/tv_address2" />

        <TextView
            android:id="@+id/tv_total1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Итого:"
            android:textColor="@color/colorGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date1" />

        <TextView
            android:id="@+id/tv_total2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="1057,98 сом"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/tv_total1"
            app:layout_constraintTop_toBottomOf="@id/tv_date2" />

        <TextView
            android:id="@+id/tv_discount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Сумма скидки:"
            android:textColor="@color/colorGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total1" />

        <TextView
            android:id="@+id/tv_discount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="107,86 сом сом"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/tv_discount1"
            app:layout_constraintTop_toBottomOf="@id/tv_total2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_linear"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="№"
            android:textColor="@color/colorGrey"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Название товара"
            android:textColor="@color/colorGrey"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="кол-во"
            android:textColor="@color/colorGrey"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_discountAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="скидка"
            android:textColor="@color/colorGrey"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="сумма"
            android:textColor="@color/colorGrey"
            android:textSize="13dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/layout_linear"
        tools:listitem="@layout/item_third_layout" />

</LinearLayout>